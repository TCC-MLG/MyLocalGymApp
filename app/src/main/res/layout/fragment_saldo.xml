<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gym.com.br.mylocalgym.fragments.SaldoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".fragments.SaldoFragment"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent" android:layout_height="50dp" android:gravity="center"
            android:textSize="10sp" android:paddingTop="10dp" android:paddingBottom="10dp"/>

        <ImageView android:src="@drawable/academia"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Local Gym"
            android:textColor="@color/colorlogo"
            android:gravity="center"
            android:id="@+id/s_logo" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/s_Saldo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:textColor="@color/colorlogin"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Saldo atual"
                android:inputType="numberDecimal"
                android:maxLength="11">
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_teste"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/s_dat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:textColor="@color/colorlogin"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Validade"
                android:inputType="date">
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <TextView
        android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center"
        android:textSize="10sp" android:paddingTop="10dp" android:paddingBottom="10dp"/>

        <ImageView android:src="@drawable/pagseguro"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Você será direcionado(a) para a pagina do PagSeguro"
            android:textColor="@color/colorlogin"
            android:id="@+id/s_recarregar" />


        <Button
            android:id="@+id/s_Recarregar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorlogin"
            android:text="Recarregar"
            android:onClick="Acessar"/>


    </LinearLayout>

</FrameLayout>