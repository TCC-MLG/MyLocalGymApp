<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gym.com.br.mylocalgym.fragments.CheckinFragment">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            tools:context="gym.com.br.mylocalgym.activitys.DadosPessoaisFragment">

            <TextView
                android:layout_width="fill_parent" android:layout_height="60dp" android:gravity="center"
                android:textSize="10sp" android:paddingTop="10dp" android:paddingBottom="10dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ckNacademia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ck_NomeAc"
                    android:hint="Academia"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Smart fit"
                    android:inputType="none"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ckEnderecoAc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="fill_parent"
                    android:hint="Endereço"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_height="wrap_content"
                    android:id="@+id/ck_EndAc"
                    android:text="Rua logo ali"
                    android:inputType="none"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_CkPreco"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ck_Preco"
                    android:hint="Preço do treino"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="15,00"
                    android:inputType="none"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ckStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ck_Status"
                    android:text="Sim"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Academia aberta"
                    android:inputType="none"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center"
                android:textSize="10sp" android:paddingTop="10dp" android:paddingBottom="10dp"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ckTransaction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ck_Transaction"
                    android:text="Não enviada"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Status da solicitação"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="none"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center"
                android:textSize="10sp" android:paddingTop="10dp" android:paddingBottom="10dp"/>

            <Button
                android:id="@+id/ck_Treinar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Treinar"
                android:background="@color/colorlogin"
                android:layout_marginTop="15dp" />

        </LinearLayout>
</FrameLayout>
