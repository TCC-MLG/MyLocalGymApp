<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/linearLayoutHeader1"
    android:layout_centerHorizontal="true" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent" android:id="@+id/test"
            android:gravity="center"
            android:textSize="10sp" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extrato - Ultimas transações"
            android:textColor="@color/colorlogin"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="fill_parent" android:layout_height="10dp" android:gravity="center"
            android:textSize="10sp" android:paddingTop="10dp" android:paddingBottom="10dp"/>

        <RadioButton
            android:id="@+id/ex_15d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 dias"
            android:layout_alignParentTop="true"/>

        <RadioButton
            android:id="@+id/ex_30d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 dias"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extrato"
            android:textColor="@color/colorlogin"
            android:textSize="20sp"/>
    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="850dp">

        <ListView
            android:id="@+id/list_extrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </FrameLayout>

</LinearLayout>
</ScrollView>